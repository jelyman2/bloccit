<h1>New Advertisement</h1>

<div class="row">
  <div class="col-md-4">
    <p>Guidelines</p>
    <ul>
      <li>No adult ads.</li>
      <li>No illegal products.</li>
      <li>No Flash ads. Flash is dead... get over it.</li>
    </ul>
  </div>
  <div class="col-md-8">
    <%= form_for @advertisement do |f| %>
        <div class="form-group">
          <%= f.label :title %>
          <%= f.text_field :title, class: 'form-control', placeholder: "Enter advertisement title" %>
        </div>
        <div class="form-group">
          <%= f.label :copy %>
          <%= f.text_area :copy, rows: 8, class: 'form-control', placeholder: "Enter advertisement copy" %>
        </div>
        <div class="form-group">
          <%= f.label :price %>
          <%= f.text :price, class: 'form-control', placeholder: "Enter advertisement price as a number" %>
        </div>
        <div class="form-group">
          <%= f.submit "Save", class: 'btn btn-success' %>
        </div>
    <% end %>
  </div>
</div>